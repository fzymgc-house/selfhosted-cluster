{
  "permissions": {
    "allow": [
      "Edit(.devcontainer/**)",
      "Edit(ansible/**)",
      "Edit(tf/**)",
      "Edit(argocd/**)",
      "Edit(docs/**)",
      "Edit(.claude/**)",
      "Bash(git:*)",
      "Bash(terraform:*)",
      "Bash(kubectl:*)",
      "Bash(ansible:*)",
      "Bash(vault:*)",
      "Bash(gh:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/bash_command_validator.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/gremlin-heredoc-containment.py"
          }
        ]
      }
    ]
  }
}
