{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ]
    },
    "kubernetes-mcp-server": {
      "command": "npx",
      "args": [
        "-y",
        "kubernetes-mcp-server@latest",
        "--read-only"
      ],
      "env": {
        "KUBECONFIG": "/Users/sean/.kube/config:/Users/sean/.kube/configs/fzymgc-house-admin.yml"
      }
    },
    "grafana": {
      "type": "http",
      "url": "https://mcp.grafana.fzymgc.house/mcp"
    }
  }
}
