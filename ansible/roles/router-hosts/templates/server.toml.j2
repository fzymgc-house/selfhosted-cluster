# {{ ansible_managed }}
# router-hosts server configuration

[server]
bind_address = "{{ router_hosts_bind_address }}:{{ router_hosts_grpc_port }}"
hosts_file_path = "/data/hosts"

[database]
path = "/data/router-hosts.db"

[tls]
cert_path = "/certs/server.crt"
key_path = "/certs/server.key"
ca_cert_path = "/certs/ca.crt"

[retention]
max_snapshots = 50
max_age_days = 30

[hooks]
on_success = ["/scripts/on-hosts-update.sh"]
on_failure = []
