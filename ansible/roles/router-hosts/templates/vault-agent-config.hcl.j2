# {{ ansible_managed }}
# Vault Agent configuration for router-hosts mTLS certificates

vault {
  address = "{{ router_hosts_vault_addr }}"
}

auto_auth {
  method "approle" {
    config = {
      role_id_file_path   = "/vault/approle/role_id"
      secret_id_file_path = "/vault/approle/secret_id"
      # Keep secret_id on disk for container restarts. The Vault Agent
      # container may restart independently (Docker restart, host reboot),
      # and needs to re-authenticate without Ansible re-provisioning.
      # Security: The vault-approle directory has mode 0700 and is not
      # mounted to the router-hosts container. Credential rotation is
      # handled by re-running the Ansible playbook.
      remove_secret_id_file_after_reading = false
    }
  }

  sink "file" {
    config = {
      # Token stored in dedicated directory, not in shared certs volume
      path = "/vault/token/.vault-token"
      mode = 0600
    }
  }
}

template_config {
  static_secret_render_interval = "5m"
}

# Write all certificate components from a single pkiCert call to ensure
# the cert, key, and CA all come from the same issuance.
template {
  contents = <<-EOF
  {{ '{{' }}- with pkiCert "{{ router_hosts_vault_pki_path }}/issue/{{ router_hosts_vault_pki_role }}" "common_name={{ router_hosts_cert_cn }}" "ttl={{ router_hosts_cert_ttl }}" "alt_names={{ router_hosts_cert_dns_sans | join(',') }}" "ip_sans={{ router_hosts_cert_ip_sans | join(',') }}" -{{ '}}' }}
  ===CERT===
  {{ '{{' }} .Cert {{ '}}' }}
  ===KEY===
  {{ '{{' }} .Key {{ '}}' }}
  ===CA===
  {{ '{{' }} .CA {{ '}}' }}
  ===END===
  {{ '{{' }}- end {{ '}}' }}
  EOF
  destination = "/vault/certs/bundle.pem"
  perms = 0600
  command = "/scripts/split-certs.sh"
}
